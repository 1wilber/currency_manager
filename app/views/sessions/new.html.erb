<% if flash[:alert] %>
  <div class="alert alert-error mb-4">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="stroke-current shrink-0 h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"
      />
    </svg>
    <span><%= flash[:alert] %></span>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success mb-4">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="stroke-current shrink-0 h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
      />
    </svg>
    <span><%= flash[:notice] %></span>
  </div>
<% end %>

<div class="card bg-base-100 shadow-sm">
    <div class="card-body">

      <div class="text-center">
        <h1 class="text-3xl font-bold text-base-content">
          <%= t('.title') %>
        </h1>
        <p class="text-base-content/70 mt-1">
          <%= t('.description') %>

        </p>
      </div>
    <%= form_with url: session_path, html: {class: "space-y-4"} do |form| %>
        <fieldset class="fieldset">

        <%= form.label :email_address, User.human_attribute_name(:email_address), class: "fieldset-legend"  %>
        <%= form.email_field :email_address,
                        required: true,
                        autofocus: true,
                        placeholder: t("forms.users.placeholders.email"),
                        value: params[:email_address],
                        class: "input w-full" %>

        <%= form.label :password, User.human_attribute_name(:password), class: "fieldset-legend"  %>
        <%= form.password_field :password,
                            id: "password",
                            required: true,
                            autocomplete: "current-password",
                            placeholder: t("forms.users.placeholders.password"),
                            maxlength: 72,
                            class: "input input-bordered w-full" %>

        <div class="card-actions justify-end mt-6">
            <%= form.submit t(:sign_in), class: "btn btn-primary" %>
        </div>
        </fieldset>
    <% end %>
    </div>
</div>
