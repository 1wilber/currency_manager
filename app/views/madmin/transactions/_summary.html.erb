<section class="metrics">
  <article class="metric">
    <h4>
      <%= Transaction.human_attribute_name(:profit) %>
    </h4>
    <p>
      <%= form.text_field :profit,
                      value: money_value(form.object.profit),
                      data: {
                        transaction_form_target: "profit",
                        controller: "number-input",
                      } %>
    </p>
  </article>

  <article class="metric">
    <h4><%= Transaction.human_attribute_name(:total) %></h4>
    <p>
      <%= form.text_field :total,
                      value: money_value(form.object.total),
                      data: {
                        transaction_form_target: "total",
                        controller: "number-input",
                      } %>
    </p>
  </article>
</section>
