<%= content_for(:page_title) { @bank.name } %>

<div class="flex gap-2">
  <button
    onclick="new_bank_transaction.showModal()"
    class="btn btn-success btn-xs"
  ><%= t(:add_funds) %></button>

  <button onclick="new_bank_balance.showModal()" class="btn btn-primary btn-xs">Crear Saldo</button>
  <!-- Modal para agregar fondos -->
  <dialog id="new_bank_transaction" class="modal">
    <%= simple_form_for(@bank.incomings.new, url: bank_transactions_path(@bank), html: {class: "modal-box"}) do |f| %>

      <div class="flex gap-3">
        <button class="btn btn-circle btn-info btn-soft">
          <%= icon("dollar") %>
        </button>
        <div class="flex-1">
          <h3 class="text-lg font-bold"><%= t(:add_funds) %></h3>
          <small class="label">Ingresa el monto que deseas agregar a tu cuenta bancaria</small>
        </div>
      </div>

      <%= f.hidden_field :rate, value: 1 %>
      <%= f.hidden_field :cost_rate, value: 1 %>
      <%= f.hidden_field :sender_id, value: Bank.default.id %>
      <%= f.hidden_field :sender_type, value: "Bank" %>
      <fieldset class="fieldset">
        <legend class="fieldset-legend"><%= Transaction.human_attribute_name(:amount) %></legend>
        <div class="input w-full">
          <%= dollar_sign %>
          <%= f.text_field :amount, class: "grow", data: { controller: "number-input" } %>

          <span class="w-8">
            <%= render_currency_flag(@bank.currency) %>
          </span>
        </div>
      </fieldset>

      <div class="modal-action">
        <%= f.submit t(:add), class: "btn btn-primary" %>
      </div>
    <% end %>
  </dialog>
  <!-- Modal para crear saldo bancario -->
  <dialog id="new_bank_balance" class="modal">
    <%= simple_form_for([@bank, @bank.bank_balances.new], html: {class: "modal-box"}) do |f| %>

      <div class="flex gap-3 mb-4">
        <button type="button" class="btn btn-circle btn-primary btn-soft">
          <%= icon("dollar") %>
        </button>
        <div class="flex-1">
          <h3 class="text-lg font-bold">Crear Saldo Bancario</h3>
          <small class="label">Registra un nuevo saldo disponible para este banco</small>
        </div>
      </div>

      <fieldset class="fieldset">
        <legend class="fieldset-legend">Monto</legend>
        <div class="input w-full">
          <%= dollar_sign %>
          <%= f.input_field :amount, class: "grow", data: { controller: "number-input" } %>
          <span class="w-8">
            <%= render_currency_flag(@bank.currency) %>
          </span>
        </div>
      </fieldset>

      <fieldset class="fieldset">
        <legend class="fieldset-legend">Tasa de Cambio</legend>
        <%= f.input :rate,
                label: false,
                input_html: {
                  class: "input input-bordered w-full",
                  data: {
                    controller: "number-input",
                  },
                } %>
        <small class="label">Ejemplo: 1 CLP = X
          <%= @bank.currency %></small>
      </fieldset>

      <fieldset class="fieldset">
        <legend class="fieldset-legend">Descripción (opcional)</legend>
        <%= f.input :description,
                as: :text,
                label: false,
                input_html: {
                  class: "textarea textarea-bordered w-full",
                  rows: 3,
                  placeholder: "Ingresa una descripción para este saldo...",
                } %>
      </fieldset>

      <div class="modal-action">
        <form method="dialog">
          <button class="btn">Cancelar</button>
        </form>
        <%= f.submit "Crear Saldo", class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
</dialog>

<%= render "bank_balances/list", bank_balances: @bank.bank_balances, bank: @bank %>

<div class="stats w-full bg-base-100 border-base-300 border mb-4">
  <%= render "shared/stat",
  value:
    raw(
      (@total_profit.positive? ? "+" : "-") +
        number_to_currency(@total_profit, precision: 0, unit: @bank.currency),
    ),
  title: t(:profit),
  figure: {
    class: "text-success",
    icon: icon("trending-up"),
  } %>

  <%= render "shared/stat",
  value:
    number_to_currency(
      @transactions.sum(:total),
      precision: 0,
      unit: current_exchange_rate.target,
    ),
  title: Transaction.human_attribute_name(:total),
  figure: {
    class: "text-info",
    icon: icon("dollar"),
  } %>

  <%= render "shared/stat",
  value:
    number_to_currency(
      @transactions.sum(:amount),
      precision: 0,
      unit: @bank.currency,
    ),
  title: Transaction.human_attribute_name(:amount),
  figure: {
    class: "text-accent",
    icon: icon("dollar"),
  } %>
</div>

<div class="card bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="prose">
      <h3 class="flex items-center gap-1 mb-0">
        <%= icon("transfer") %>
        <%= Transaction.model_name.human(count: 2) %>
      </h3>

      <p class="label"><%= t(:transactions_count, count: @transactions.count) %></p>
    </div>

    <% @transactions.each do |transaction| %>
      <div class=" bg-base-100 border border-base-300 p-4 rounded-2xl flex ">
        <div class="flex-1 flex flex-col gap-2">
          <div>
            <div class="badge badge-ghost bg-slate-200 text-xs font-mono">#<%= transaction.id %></div>
            <div class="badge badge-neutral badge-outline border-base-300 text-xs"><%= transaction.customer.name %></div>
          </div>
          <p class="text-xs label">
            <%= l(transaction.created_at, format: "%d %b %Y, %H:%M") %>
          </p>

          <div class="grid grid-cols-2">
            <div>
              <p class="text-xs label">
                <%= Transaction.human_attribute_name(:amount) %>
              </p>
              <p class="font-semibold">
                <%= transaction.display_amount %>
              </p>
            </div>

            <div>
              <p class="text-xs label">
                <%= Transaction.human_attribute_name(:profit) %>
              </p>
              <p
                class="font-semibold <%= transaction.profit.positive? ? "text-success" : "" %>"
              >
                <%= transaction.profit.positive? ? "+" : "-" %><%= transaction.display_profit %>
              </p>
            </div>
          </div>

        </div>

        <div class="flex justify-end">
          <%= link_to icon("edit"), edit_transaction_path(transaction) %>
        </div>
      </div>

    <% end %>
  </div>
</div>
