<div class="card bg-base-100 shadow-sm">
  <div class="card-body">
    <div class="prose mb-4">
      <h3 class="flex items-center gap-1 mb-0">
        <%= icon("dollar") %>
        <%= BankBalance.model_name.human(count: 2) %>
      </h3>
      <p class="label"><%= t(".description") %></p>
    </div>

    <% if bank_balances.any? %>
      <div class="overflow-x-auto">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th><%= BankBalance.human_attribute_name(:code) %></th>
              <th><%= BankBalance.human_attribute_name(:amount) %></th>
              <th><%= BankBalance.human_attribute_name(:balance) %></th>
              <th><%= BankBalance.human_attribute_name(:percentage_used) %></th>
              <th><%= BankBalance.human_attribute_name(:rate) %></th>
              <th><%= BankBalance.human_attribute_name(:description) %></th>
            </tr>
          </thead>
          <tbody>
            <% bank_balances.each do |bank_balance| %>
              <tr>
                <td>
                  <div class="badge badge-neutral badge-outline font-mono text-xs">
                    <%= bank_balance.code %>
                  </div>
                </td>
                <td class="font-semibold">
                  <%= number_to_currency(bank_balance.amount, precision: 2, unit: bank.currency) %>
                </td>
                <td
                  class="font-semibold <%= bank_balance.balance > 0 ? 'text-success' : 'text-error' %>"
                >
                  <%= number_to_currency(bank_balance.balance, precision: 2, unit: bank.currency) %>
                </td>
                <td>
                  <div class="flex flex-col gap-1">
                    <span class="text-xs font-semibold"><%= bank_balance.percentage_used %>%</span>
                    <progress
                      class="
                        progress <%= bank_balance.percentage_used > 80 ? 'progress-error' : bank_balance.percentage_used > 50 ? 'progress-warning' : 'progress-success' %> w-32
                      "
                      value="<%= bank_balance.percentage_used %>"
                      max="100"
                    >
                    </progress>
                  </div>
                </td>
                <td class="text-xs">
                  1 CLP =
                  <%= bank_balance.rate %>
                  <%= bank.currency %>
                </td>
                <td>
                  <% if bank_balance.description.present? %>
                    <span class="text-xs text-base-content/60"><%= bank_balance.description.truncate(50) %></span>
                  <% else %>
                    <span class="text-xs text-base-content/40 italic"><%= t(".no_description") %></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="alert alert-info">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="stroke-current shrink-0 w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <span><%= t(".empty_state") %></span>
      </div>
    <% end %>
  </div>
</div>
