<tr>
  <td>
    <div class="badge badge-neutral badge-outline font-mono text-xs">
      <%= bank_balance.code %>
    </div>
  </td>
  <td class="font-semibold">
    <%= number_to_currency(bank_balance.amount, precision: 2, unit: bank.currency) %>
  </td>
  <td
    class="font-semibold <%= bank_balance.balance > 0 ? 'text-success' : 'text-error' %>"
  >
    <%= number_to_currency(bank_balance.balance, precision: 2, unit: bank.currency) %>
  </td>
  <td>
    <div class="flex flex-col gap-1">
      <span class="text-xs font-semibold"><%= bank_balance.percentage_used %>%</span>
      <progress
        class="progress <%= bank_balance.percentage_used > 80 ? 'progress-error' : bank_balance.percentage_used > 50 ? 'progress-warning' : 'progress-success' %> w-32"
        value="<%= bank_balance.percentage_used %>"
        max="100"
      >
      </progress>
    </div>
  </td>
  <td class="text-xs">
    1 CLP =
    <%= bank_balance.rate %>
    <%= bank.currency %>
  </td>
  <td>
    <% if bank_balance.description.present? %>
      <span class="text-xs text-base-content/60"><%= bank_balance.description.truncate(50) %></span>
    <% else %>
      <span class="text-xs text-base-content/40 italic"><%= t("bank_balances.list.no_description") %></span>
    <% end %>
  </td>
</tr>
