<div class="card">
  <div class="card-body bg-base-100">
    <div class="flex flex-col gap-3">
      <%= render partial: "shared/day_changer" %>
      <div class="flex flex-col md:flex-row gap-3 md:justify-end">
        <%= icon_link t("new"), %i[new transaction], icon: "plus", class: "btn btn-primary" %>

        <%= icon_link t("edit_bank_balances"),
        %i[bank_balances],
        icon: "edit",
        class: "btn btn-outline",
        disabled: true,
        data: {
          turbo_frame: :modal,
        } %>
      </div>
    </div>
    <div class="overflow-x-auto">
      <table class="table table-zebra">
        <thead>
          <tr>
            <th><%= t(:id) %></th>
            <th><%= Transaction.human_attribute_name(:sender) %></th>
            <th><%= Transaction.human_attribute_name(:receiver) %></th>
            <th><%= Transaction.human_attribute_name(:rate) %></th>
            <th><%= Transaction.human_attribute_name(:cost_rate) %></th>
            <th><%= Transaction.human_attribute_name(:amount) %></th>
            <th><%= Transaction.human_attribute_name(:total) %></th>
            <th><%= Transaction.human_attribute_name(:profit) %></th>
            <th><%= t("created_at") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render transactions %>
        </tbody>
      </table>
    </div>
  </div>
</div>
